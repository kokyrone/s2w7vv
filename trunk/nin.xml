		<group name = "Dynamis" inherit = "Standard" />
	</sets>
	<variables>
		<!-- Engaged Melee Gear -->
		<var name="MeleeSet">TP</var>
		<!-- Ranged Weapon Type -->
		<var name="RType">Dart</var>
		<!-- Init with day set will update after first cast/ja etc.-->
		<var name="DayOrNight">Day</var>
		<var name="BattleArea">Standard</var>
		<!-- Obi Rules -->
		<var name = "ThunderObi">1</var>
		<var name = "IceObi">1</var>
	</variables>
	<rules>
		<!-- Check there's nothing stopping us acting -->
		<xi:include href = "/includes/inc.xml" xpointer = "/includes/include[@name='ReturnRules']/*" />
		<!-- Equip town gears :) -->
		<xi:include href="/includes/inc.xml" xpointer="/includes/include[@name='IdleSettings']/*" />
		<!-- Check to see if we are in a battlefield type thing -->
		<xi:include href="/includes/inc.xml" xpointer="/includes/include[@name='BattleArea']/*" />
		<!-- Timecheck -->
		<xi:include href="/includes/inc.xml" xpointer="/includes/include[@name='TimeCheck']/*" />
		<!-- auto cancel sneak/utsu/stoneskin/blink when recasting them. Requires Cancel Plugin-->
		<xi:include href="/includes/inc.xml" xpointer="/includes/include[@name='CancelRules']/*" />
		<!-- Check to see what Moon Phase we are in -->
		<xi:include href = "/includes/moon.xml" xpointer = "/includes/include[@name='Moon']/*" />
		<!-- Default melee gears engaged -->
		<equip when = "engaged" setgroup = "$BattleArea" set = "$DayOrNight$MeleeSet" />
		<!-- Aftercast rules -->
		<if NotStatus="engaged">
			<equip when = "aftercast" setgroup = "$BattleArea" set = "$DayOrNightIdle" />
		</if>
		<else>
			<equip when = "aftercast" setgroup = "$BattleArea" set = "$DayOrNight$MeleeSet" />
		</else>
		<!-- lock ranged weapons when we have TP-->
		<if TPGT="9">
			<if advanced='"$MeleeSet" == "Eva" OR "$MeleeSet" == "Tank"'>
				<equip when="precast|midcast|aftercast">
					<ammo lock="t" />
				</equip>
			</if>
			<else>
				<equip when="precast|midcast|aftercast">
					<range lock="t" />
				</equip>
			</else>
		</if>
		<!-- Lock items that affect abilities -->
		<if BuffActive="Migawari">
			<equip when = "engaged" setgroup = "$BattleArea" set = "$DayOrNight$MeleeSet">
				<body lock="true">Iga Ningi +2</body>
			</equip>
			<action type = "command">input /echo Migawari</action>
		</if>
		<if BuffActive="March">
			<equip when = "engaged" setgroup = "$BattleArea" set = "$DayOrNight$MeleeSet">
				<body lock="true">Iga Ningi +2</body>
			</equip>
			<action type = "command">input /echo March</action>
		</if>
		<!-- rules for job abilities and actions -->
		<if Spell = "Blade:*">
			<if Spell = "*Chi|*Jin|*Kamu">
				<equip when = "precast" setgroup = "$BattleArea" set = "WS">
					<neck>Thunder Gorget</neck>
					<waist>Thunder Belt</waist>
					<legs>Byakko's Haidate</legs>
				</equip>
				<if Spell = "*Kamu" advanced='"$DayOrNight" == "Night"'>
					<equip when = "precast">
						<hands>Koga Tekko</hands>
					</equip>
				</if>
				<castdelay delay = "0.2" />
				<aftercastdelay delay = "4" />
			</if>
			<elseif Spell = "*Ku|*Ten">
				<equip when = "precast" setgroup = "$BattleArea" set = "WS">
					<neck>Soil Gorget</neck>
					<waist>Soil Belt</waist>
					<legs>Byakko's Haidate</legs>
				</equip>
				<castdelay delay = "0.2" />
				<aftercastdelay delay = "4" />
			</elseif>
			<else>
				<equip when = "precast" setgroup = "$BattleArea" set = "WS" />
				<aftercastdelay delay = "4" />
			</else>
		</if>
		<if Spell ="Cataclysm|Aeolian Edge">
				<equip when = "precast" setgroup = "$BattleArea" set = "WS|EleNin">
					<if advanced = '$MoonPhase &gt; 2'>
						<neck lock = "yes">Artemis' Medal</neck>
					</if>
				</equip>
				<aftercastdelay delay = "2" />
		</if>
		<!-- some DNC sub rules -->
		<if Spell="Curing Waltz II" TPGT="49">
			<changespell Spell="Curing Waltz III" />
		</if>
		<if Spell = "*Step">
			<equip when = "precast" setgroup = "$BattleArea" set = "Acc" />
			<aftercastdelay delay = "1" />
		</if>
		<!-- Job Abilities -->
		<if Spell = "Provoke|Animated Flourish|Warcry|Berserk|Yonin">
			<equip when = "precast" setgroup = "$BattleArea" set = "Enmity" />
			<aftercastdelay delay = "1" />
		</if>
		<if Spell = "Futae">
			<equip when = "precast">
				<hands>Iga Tekko +2</hands>
			</equip>
		</if>
		<!-- Ninjutsu Rules -->
		<if Spell = "Kurayami*|Dokumori*|Hojo*|Jubaku*|Aisha*|Yurin*">
			<equip when = "precast" setgroup = "$BattleArea" set = "Enmity|Ninjutsu">
				<rear>Loquac. Earring</rear>
				<body>Mirke Wardecors</body>
			</equip>
		</if>
		<if Spell = "Doton*|Suiton*|Huton*|Katon*|Hyoton*|Raiton*">
			<equip when = "precast" setgroup = "$BattleArea" set = "EleNin" />
			<!-- Handle Elemental Obi's -->
			<xi:include href = "/includes/inc.xml" xpointer = "/includes/include[@name='ObiRules']/*" />
		</if>
		<if spell="Utsusemi*|Migawari*|Myoshu*">
			<if HPPLT="26">
				<equip when = "precast" setgroup = "$BattleArea" set = "$DayOrNightEva">
					<!--just need two pieces for haste cap-->
					<ammo lock="yes"></ammo>
					<head>Iga Zukin +2</head>
					<lear>Shinobi Earring</lear>
					<rear>Loquac. Earring</rear>
					<body>Mirke Wardecors</body>
					<feet>Iga Kyahan +2</feet>
				</equip>
			</if>
			<else>
				<equip when = "precast" setgroup = "$BattleArea" set = "Enmity|$DayOrNightHaste" />
			</else>
			<if spell="Utsusemi*">
				<equip when = "precast">
					<neck>Magoraga Beads</neck>
					<rear>Loquac. Earring</rear>
				</equip>
				<if spell="Utsusemi: Ichi" BuffActive="Copy Image">
					<midcastdelay delay="3.0" />
					<command when = "midcast">cancel 66</command>
				</if>
			</if>
			<aftercastdelay delay = "1" />
		</if>
		<if Spell = "Tonko*|Monomi*">
			<equip when = "precast" setgroup = "$BattleArea" set = "Ninjutsu">
				<rear>Loquac. Earring</rear>
				<body>Mirke Wardecors</body>
			</equip>
		</if>
		<if Spell = "Ranged">
			<action type = "command">input /echo $RType</action>
			<equip when = "precast" setgroup = "$BattleArea" set = "$RType" />
			<!-- wait until we actually have a ranged weapon equiped -->
			<castdelay delay = "0.2" />
			<aftercastdelay delay = "2" />
		</if>
	</rules>
</spellcast>
