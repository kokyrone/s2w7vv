<?xml version="1.0" ?>
<spellcast xmlns:xi="http://www.w3.org/2001/XInclude">
	<config
		RestingSet="Idle"
		NormalSet="Idle"
		EngagedSet="$MeleeSet"
		RequireVersion="2.22"
		ShowGearSwaps="false"
		Debug="True"
		/>
	<sets>
		<group default = "true" name = "Standard">
			<set name = "DayIdle|NightIdle|Idle" BaseSet = "$MeleeSet">
				<head>Tokon Hachimaki</head>
				<neck>Twilight Torque</neck>
				<body>Mirke Wardecors</body>
				<hands>Temple Gloves</hands>
				<lring>Jelly Ring</lring>
				<feet>Hermes Sandals</feet>
			</set>
			<set name = "TP">
				<ammo />
				<head>Brisk Mask</head>
				<neck>Chivalrous Chain</neck>
				<lear>Kemas Earring</lear>
				<rear>Brutal Earring</rear>
				<body>Aurore Doublet</body>
				<hands>Aurore Gloves</hands>
				<lring>Rajas Ring</lring>
				<rring>Heed Ring</rring>
				<back>Amemet Mantle +1</back>
				<waist>Purple Belt</waist>
				<legs>Tantra Hose +1</legs>
				<feet>Fuma Sune-ate</feet>
			</set>
			<set name = "Eva">
				<head>Optical Hat</head>
				<neck>Evasion Torque</neck>
				<lear>Velocity Earring</lear>
				<rear>Dodge Earring</rear>
				<body>Aurore Doublet</body>
				<hands>Seiryu's Kote</hands>
				<lring>Rajas Ring</lring>
				<rring>Heed Ring</rring>
				<back />
				<waist>Survival Belt</waist>
				<legs>Ambusher's Hose</legs>
				<feet>Tabin Boots +1</feet>
				<!--<feet>Temple Gaiters +1</feet>-->
			</set>
			<set name = "Acc" BaseSet = "TP">
				<ammo />
				<head>Tokon Hachimaki</head>
				<waist>Virtuoso Belt</waist>
				<legs>Tantra Hose +1</legs>
				<feet>Tantra Gaiters +1</feet>
			</set>
			<set name = "Tank" BaseSet = "TP"/>
			<set name = "Kick" BaseSet = "TP">
				<feet>Poise Shoes</feet>
			</set>
			<set name = "PDT" BaseSet = "TP">
				<ammo>Bibiki Seashell</ammo>
				<head>Arhat's Jinpachi</head>
				<!--<neck>Twilight Torque</neck>-->
				<lring>Jelly Ring</lring>
			</set>
			<set name = "Enmity" BaseSet = "$MeleeSet">
				<neck>Harmonia's Torque</neck>
				<rear>Eris' Earring</rear>
				<lring>Mermaid Ring</lring>
				<waist>Warwolf Belt</waist>
			</set>
			<set name = "VIT" BaseSet = "$MeleeSet">
				<ammo>Bibiki Seashell</ammo>
				<lear>Kemas Earring</lear>
				<body>Temple Cyclas</body>
				<rring>Spiral Ring</rring>
				<waist>Warwolf Belt</waist>
				<feet>Creek M clomps</feet>
			</set>
			<set name = "MND" BaseSet = "$MeleeSet">
				<head>Temple Crown</head>
				<lring>Sapphire Ring</lring>
				<rring>Solemn Ring</rring>
				<legs>Ambusher's Hose</legs>
			</set>
			<set name = "WS" BaseSet = "$MeleeSet">
				<head>Tokon Hachimaki</head>
				<lear>Coral Earring</lear>
				<rear>Brutal Earring</rear>
				<rring>Spiral Ring</rring>
				<waist>Virtuoso Belt</waist>
				<waist>Warwolf Belt</waist>
				<feet>Creek M clomps</feet>
			</set>
			<set name = "Rest" BaseSet = "Idle"/>
			<set name = "Town" BaseSet = "Idle"/>
			<set name = "Haste" BaseSet = "$MeleeSet">
				<head lock="yes">Brisk Mask</head>
				<body lock="yes">Mirke Wardecors</body>
				<hands lock="yes">Aurore Gloves</hands>
				<waist lock="yes">Purple Belt</waist>
				<legs lock="yes">Tantra Hose +1</legs>
				<feet lock="yes">Fuma Sune-Ate</feet>
			</set>
			<set name = "Boost" BaseSet = "$MeleeSet">
				<hands>Temple Gloves</hands>
			</set>
			<set name = "Dodge" BaseSet = "$MeleeSet">
				<feet>Temple Gaiters</feet>
			</set>
			<set name = "Focus" BaseSet = "$MeleeSet">
				<head>Temple Crown</head>
			</set>
			<set name = "Chakra" BaseSet = "VIT">
				<body>Temple Cyclas</body>
			</set>
			<set name = "ChiBlast" BaseSet = "MND"/>
		</group>
		<!-- Campaign Battle gear - only used when Allied Tags are on -->
		<group name = "Camp" inherit = "Standard">
			<set name = "WS" BaseSet = "TP">
				<head>Optical Hat</head>
				<neck>Bull Necklace</neck>
				<lear>Coral Earring</lear>
				<rear>Brutal Earring</rear>
				<body>Haubergeon</body>
				<hands>Iga Tekko +1</hands>
				<lring>Rajas Ring</lring>
				<rring>Airy Ring</rring>
				<back />
				<waist>Warwolf Belt</waist>
				<legs>Byakko's Haidate</legs>
				<feet>Iga Kyahan +1</feet>
			</set>
		</group>
		<group name = "Siege" inherit = "Standard" />
		<group name = "Assault" inherit = "Standard" />
		<group name = "Abyssea" inherit = "Standard" />
	</sets>
	<variables>
		<!-- Engaged Melee Gear -->
		<var name="MeleeSet">TP</var>
		<!-- Init with day set will update after first cast/ja etc.-->
		<var name="DayOrNight">Day</var>
		<var name="BattleArea">Standard</var>
	</variables>
	<rules>
		<!-- Check there's nothing stopping us acting -->
		<xi:include href = "/includes/inc.xml" xpointer = "/includes/include[@name='ReturnRules']/*" />
		<!-- Equip town gears :) -->
		<xi:include href="/includes/inc.xml" xpointer="/includes/include[@name='IdleSettings']/*" />
		<!-- Check to see if we are in a battlefield type thing -->
		<xi:include href="/includes/inc.xml" xpointer="/includes/include[@name='BattleArea']/*" />
		<!-- auto cancel sneak/utsu/stoneskin/blink when recasting them. Requires Cancel Plugin-->
		<xi:include href="/includes/inc.xml" xpointer="/includes/include[@name='CancelRules']/*" />
		<!-- Default melee gears engaged -->
		<equip when = "engaged" setgroup = "$BattleArea" set = "$MeleeSet" />
		<!-- Aftercast rules -->
		<if NotStatus="engaged">
			<equip when = "aftercast" setgroup = "$BattleArea" set = "Idle" />
		</if>
		<else>
			<equip when = "aftercast" setgroup = "$BattleArea" set = "$MeleeSet" />
		</else>
		<!-- rules for situational gear -->
		<if advanced='"$MeleeSet" == "Eva"'>
			<if BuffActive="Blind">
				<rear>Bat Earring</rear>
			</if>
			<elseif BuffActive="Song">
				<rear>Melody Earring</rear>
			</elseif>
		</if>
		<!-- rules for job abilities and actions -->
		<if Spell = "One Inch Punch|Backhand Blow">
			<equip when = "precast" setgroup = "$BattleArea" set = "WS" />
			<aftercastdelay delay = "3" />
		</if>
		<if Spell = "Combo|Shoulder Tackle|Raging Fists|Spinning Attack|Howling Fist|Dragon Kick|Tornado Kick|Victory Smite">
			<equip when = "precast" setgroup = "$BattleArea" set = "WS">
				<neck lock="yes">Thunder Gorget</neck>
			</equip>
			<castdelay delay = "0.2" />
			<aftercastdelay delay = "4" />
		</if>
		<if Spell = "Asuran Fists">
			<equip when = "precast" setgroup = "$BattleArea" set = "WS|Acc">
				<neck lock="yes">Soil Gorget</neck>
			</equip>
			<castdelay delay = "0.2" />
			<aftercastdelay delay = "4" />
		</if>
		<if Spell = "Acetics Fury">
			<equip when = "precast" setgroup = "$BattleArea" set = "WS|Acc"/>
			<castdelay delay = "0.2" />
			<aftercastdelay delay = "4" />
		</if>
		<if Spell = "*Step">
			<equip when = "precast" setgroup = "$BattleArea" set = "WS" />
			<aftercastdelay delay = "1" />
		</if>
		<if Spell = "Provoke|Animated Flourish|Warcry|Berserk">
			<equip when = "precast" setgroup = "$BattleArea" set = "Enmity" />
			<aftercastdelay delay = "1" />
		</if>
		<if Spell = "Boost|Dodge|Focus|Chakra">
			<equip when = "precast" setgroup = "$BattleArea" set = "%Spell" />
			<aftercastdelay delay = "1" />
		</if>
		<if spell="Utsusemi*">
			<equip when = "precast" setgroup = "$BattleArea" set = "Haste" />
			<if spell="Utsusemi: Ichi" BuffActive="Copy Image">
				<midcastdelay delay="3.0" />
				<command when = "midcast">cancel 66</command>
			</if>
			<aftercastdelay delay = "2" />
		</if>
		<!-- some DNC sub rules -->
		<if Spell="Curing Waltz II" TPGT="49" MainJobLvl="90" >
			<changespell Spell="Curing Waltz III" />
		</if>
	</rules>
</spellcast>
