		<!-- Campaign Battle gear - only used when Allied Tags are on -->
		<group name = "Camp" inherit = "Standard">
			<set name = "WS" BaseSet = "Acc">
				<neck>Bull Necklace</neck>
				<body>Cirque Farsetto +2</body>
				<lring>Rajas Ring</lring>
				<rring>Keen Ring</rring>
			</set>
		</group>
		<group name = "Siege" inherit = "Standard" />
		<group name = "Assault" inherit = "Standard" />
		<group name = "Abyssea" inherit = "Standard">
			<set name = "MeleeTP|TP">
				<sub />
				<!--<range>Turbo Animator</range>
				<ammo>Automaton Oil +2</ammo>-->
				<head>Cirque Capello +2</head>
				<neck>Cirque Necklace</neck>
				<lear>Kemas Earring</lear>
				<rear>Brutal Earring</rear>
				<body>Cirque Farsetto +2</body>
				<hands>Pantin Dastanas</hands>
				<lring>Lava's Ring</lring>
				<rring>Kusha's Ring</rring>
				<back>Pantin Cape</back>
				<waist>Shaolin Belt</waist>
				<legs>Cirque Pantaloni +2</legs>
				<feet>Cirque Scarpe +2</feet>
			</set>
			<set name = "Fire|Earth|Water|Wind|Ice|Thunder|Light|Dark" />
		</group>
		<group name = "Dynamis" inherit = "Standard">
			<set name = "MeleeTP|TP">
				<sub />
				<!--<range>Turbo Animator</range>
				<ammo>Automaton Oil +2</ammo>-->
				<head>Cirque Capello +2</head>
				<neck>Cirque Necklace</neck>
				<lear>Kemas Earring</lear>
				<rear>Brutal Earring</rear>
				<body>Cirque Farsetto +2</body>
				<hands>Pantin Dastanas</hands>
				<lring>Rajas Ring</lring>
				<rring>Heed Ring</rring>
				<back>Pantin Cape</back>
				<waist>Shaolin Belt</waist>
				<legs>Cirque Pantaloni +2</legs>
				<feet>Cirque Scarpe +2</feet>
			</set>
		</group>
	</sets>
	<variables>
		<!-- Engaged Melee Gear -->
		<var name="MeleeSet">TP</var>
		<var name="AutoSet">VE</var>
		<var name="AutoType">Melee</var>
		<!-- Init with day set will update after first cast/ja etc.-->
		<var name="DayOrNight">Day</var>
		<var name="BattleArea">Standard</var>
	</variables>
	<rules>
		<!-- Check there's nothing stopping us acting -->
		<xi:include href = "/includes/inc.xml" xpointer = "/includes/include[@name='ReturnRules']/*" />
		<!-- Equip town gears :) -->
		<xi:include href="/includes/inc.xml" xpointer="/includes/include[@name='IdleSettings']/*" />
		<!-- Check to see if we are in a battlefield type thing -->
		<xi:include href="/includes/inc.xml" xpointer="/includes/include[@name='BattleArea']/*" />
		<!-- Timecheck -->
		<xi:include href="/includes/inc.xml" xpointer="/includes/include[@name='TimeCheck']/*" />
		<!-- auto cancel sneak/utsu/stoneskin/blink when recasting them. Requires Cancel Plugin-->
		<xi:include href="/includes/inc.xml" xpointer="/includes/include[@name='CancelRules']/*" />
		<!-- Check to see what Moon Phase we are in -->
		<xi:include href = "/includes/moon.xml" xpointer = "/includes/include[@name='Moon']/*" />
		<!-- Default melee gears engaged -->
		<equip when = "engaged" setgroup = "$BattleArea" set = "$AutoType$MeleeSet" />
		<!-- Aftercast rules -->
		<if NotStatus="engaged">
			<equip when = "aftercast" setgroup = "$BattleArea" set = "Idle" />
		</if>
		<else>
			<equip when = "aftercast" setgroup = "$BattleArea" set = "$AutoType$MeleeSet" />
		</else>
		<!-- rules for job abilities and actions -->
		<if type = "Weaponskill">
			<if Spell = "Combo|Shoulder Tackle|Raging Fists|Spinning Attack|Howling Fist|Dragon Kick|Tornado Kick|Victory Smite">
				<equip when = "precast" setgroup = "$BattleArea" set = "WS">
					<neck>Thunder Gorget</neck>
					<waist>Thunder Belt</waist>
				</equip>
			</if>
			<if Spell = "Stringing Pummel">
				<equip when = "precast" setgroup = "$BattleArea" set = "WS">
					<neck>Soil Gorget</neck>
					<waist>Soil Belt</waist>
				</equip>
			</if>
			<elseif Spell = "Backhand Blow">
				<equip when = "precast" setgroup = "$BattleArea" set = "WS" />
				<aftercastdelay delay = "4" />
			</elseif>
			<elseif Spell ="Cataclysm|Aeolian Edge">
				<equip when = "precast" setgroup = "$BattleArea" set = "WS">
					<if advanced = '$MoonPhase &gt; 2'>
						<neck lock = "yes">Artemis' Medal</neck>
					</if>
					<lear>Moldavite Earring</lear>
				</equip>
				<aftercastdelay delay = "2" />
			</elseif>
			<else>
				<equip when = "precast" setgroup = "$BattleArea" set = "WS" />
			</else>
			<castdelay delay = "0.5" />
			<aftercastdelay delay = "4" />
		</if>
		<!-- some DNC sub rules -->
		<if Spell="Curing Waltz II" TPGT="49">
			<changespell Spell="Curing Waltz III" />
		</if>
		<if Spell = "*Step">
			<equip when = "precast" setgroup = "$BattleArea" set = "WS" />
			<aftercastdelay delay = "1" />
		</if>
		<!-- Job Abilities -->
		<if Spell = "Repair">
			<equip when = "precast" setgroup = "$BattleArea">
				<lear>Guignol earring</lear>
				<feet>Puppetry Babouches +1</feet>
			</equip>
			<aftercastdelay delay = "2" />
		</if>
		<if Spell = "Tactical Switch">
			<equip when = "precast" setgroup = "$BattleArea">
				<feet>Cirque Scarpe +2</feet>
			</equip>
			<aftercastdelay delay = "2" />
		</if>
		<if Spell = "*Maneuver">
			<command>input /echo %spellelement Maneuver - TP: &lt;pettp&gt; HP: &lt;pethpp&gt; MP: &lt;petmpp&gt;</command>
			<!--<equip when = "precast" setgroup = "$BattleArea" set = "Maneuver" />-->
			<equip when = "precast" setgroup = "$BattleArea" set = "%spellelement|Maneuver" />
			<aftercastdelay delay = "1" />
		</if>
		<if Spell = "Provoke|Animated Flourish|Warcry|Berserk">
			<equip when = "precast" setgroup = "$BattleArea" set = "Enmity" />
			<aftercastdelay delay = "1" />
		</if>
		<if spell="Utsusemi*">
			<equip when = "precast" setgroup = "$BattleArea" set = "Haste">
				<neck>Magoraga Beads</neck>
				<rear>Loquac. Earring</rear>
				<body>Mirke Wardecors</body>
			</equip>
			<if spell="Utsusemi: Ichi" BuffActive="Copy Image">
				<midcastdelay delay="3.0" />
				<command when = "midcast">cancel 66</command>
			</if>
			<aftercastdelay delay = "1" />
		</if>
	</rules>
</spellcast>
